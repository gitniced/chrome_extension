{
    "app": {
        "background": {
            "scripts": ["js/background.js"]
        }
    },
    "manifest_version": 2,
    "name": "Performance Monitor",
    "version": "1.0",
    "description": "A performance monitor to show cpu and memory status.",
    "icons": {
        "16": "images/icon1.png",
        "48": "images/icon2.png",
        "128": "images/IconRed.png"
    },
    "permissions": [
        "system.cpu",
        "system.memory",
        "https://cdnjs.cloudflare.com/",
        "https://ssl.gstatic.com/",
        "webview",
        {"fileSystem": ["write", "retainEntries", "directory"]},    // 文件系统
        {"mediaGalleries": ["read", "delete", "copyTo", "allAutoDetected"]}     // 媒体库
    ],
    "webview": {
        "partitions": [
            {
                "name": "sandbox",
                "accessible_resources": ["**/*.html","**/*.js"]
            }
        ]
    }
}